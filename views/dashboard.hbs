<h3>Good To See You {{name}}</h3>
{{#if stories}}
<p>here are your stories</p>
<table class="striped">
    <thead>
        <tr>
            <th>title</th>
            <th>date</th>
            <th>status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            {{!-- the line below has handlebar helper function(date,format) , where date is 'createdAt' and format is 'LLLL' --}}
            <td>{{formatDate createdAt 'LLLL'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td> <a href="/stories/edit/{{_id}}" class="btn btn-float green">
                    <i class="fas fa-edit"></i>
                </a>
                <form action="/stories/{{_id}}" method="post" id="delete-form">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn teal">
                          <i class="fas fa-trash"></i>
                      </button>
                </form></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>nothing written yet</p>
{{/if}}